.sidebar {
  visibility: visible;
  position: absolute;  
  right: 0px;
  top: 0;
  width: 200px;
  height: 100%;
  word-wrap: break-word;
  padding: 10px;
  -webkit-transition: 0.5s;
  transition: 0.5s;
  z-index: 1;
}

.sidebar.dark {
  background-color: rgb(68, 68, 68);
  color: white;
}

.sidebar.light {
  background-color: rgb(204, 204, 204);
  color: black;
}

.sidebar.closed {
  visibility: hidden;
  right: -200px;  
}

